
<h1 class="text-xl text-gray-900 leading-tight">Bills#index</h1>
<p class="text-gray-700">Find me in app/views/bills/index.html.erb</p>
<%= file_field_tag 'Carpeta', id: 'input_xml_load', webkitdirectory: true, directory: true, multiple: true %>

<%= button_to 'Cargar XMLs', bills_path, id: 'sendDataButton' %>

<table class="table-auto border-collapse border-2 border-gray-500 mx-1 my-5">
  <thead>
    <tr>
      <th class="border border-gray-400">Versión</th>
      <th class="border border-gray-400">Serie</th>
      <th class="border border-gray-400">Folio</th>
      <th class="border border-gray-400">Fecha</th>
      <th class="border border-gray-400">Sello</th>
      <th class="border border-gray-400">Forma de Pago</th>
      <th class="border border-gray-400">NoCertificado</th>
      <th class="border border-gray-400">Certificado</th>
      <th class="border border-gray-400">Condiciones de Pago</th>
      <th class="border border-gray-400">SubTotal</th>
      <th class="border border-gray-400">Descuento</th>
      <th class="border border-gray-400">Moneda</th>
      <th class="border border-gray-400">CambioMoneda</th>
      <th class="border border-gray-400">Total</th>
      <th class="border border-gray-400">Tipo de recibo</th>
      <th class="border border-gray-400">Metodo de pago</th>
      <th class="border border-gray-400">LugarExpedicion</th>
      <th class="border border-gray-400">Confirmación</th>
    </tr>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td class="border border-gray-400 text-xs"><%= bill.version %></td>
        <td class="border border-gray-400 text-xs"><%= bill.serie %></td>
        <td class="border border-gray-400 text-xs"><%= bill.folio %></td>
        <td class="border border-gray-400 text-xs"><%= bill.date %></td>
        <td class="border border-gray-400 text-xs"><%= truncate bill.stamp %></td>
        <td class="border border-gray-400 text-xs"><%= bill.way_to_pay %></td>
        <td class="border border-gray-400 text-xs"><%= bill.certificate_number %></td>
        <td class="border border-gray-400 text-xs"><%= truncate bill.certificate %></td>
        <td class="border border-gray-400 text-xs"><%= truncate bill.certificate %></td>
        <td class="border border-gray-400 text-xs"><%= bill.payment_conditions %></td>
        <td class="border border-gray-400 text-xs"><%= bill.subtotal %></td>
        <td class="border border-gray-400 text-xs"><%= bill.discount %></td>
        <td class="border border-gray-400 text-xs"><%= bill.currency %></td>
        <td class="border border-gray-400 text-xs"><%= bill.exchange_rate %></td>
        <td class="border border-gray-400 text-xs"><%= bill.total %></td>
        <td class="border border-gray-400 text-xs"><%= bill.type_of_vaucher %></td>
        <td class="border border-gray-400 text-xs"><%= bill.payment_method %></td>
        <td class="border border-gray-400 text-xs"><%= bill.expedition_place %></td>
        <td class="border border-gray-400 text-xs"><%= bill.confirmation %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= javascript_pack_tag 'load_xml' %>